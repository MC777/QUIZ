<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dummy_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:imeOptions="actionDone"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ProgressBar
        android:id="@+id/progressBar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="3dp"
        android:progress="30" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:paddingLeft="16sp"
                android:text="@string/Question1"
                android:textColor="@android:color/black" />

            <ImageView
                android:id="@+id/iletrojkotow"
                android:layout_width="320dp"
                android:layout_height="260dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/iletrojkotow" />

            <RadioGroup
                android:id="@+id/radio_group2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/view_below"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/AnswerOneOne_RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_weight="1"
                    android:onClick="changeProgress1"
                    android:text="9" />

                <RadioButton
                    android:id="@+id/AnswerOneOTwo_RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="changeProgress1"
                    android:text="10" />

                <RadioButton
                    android:id="@+id/AnswerOneThree_RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="changeProgress1"
                    android:text="11" />

                <RadioButton
                    android:id="@+id/AnswerOneFour_RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="changeProgress1"
                    android:text="12" />

                <RadioButton
                    android:id="@+id/AnswerOneFive_RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="changeProgress1"
                    android:text="13" />
            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:paddingLeft="16sp"
                android:text="@string/Question2"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/AnswerTwoOne"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:gravity="center"
                android:hint="Number"
                android:imeOptions="actionDone"
                android:inputType="number" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:paddingLeft="16dp"
                android:text="@string/Question3"
                android:textColor="@android:color/black" />

            <CheckBox
                android:id="@+id/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:onClick="changeProgress3"
                android:paddingLeft="24dp"
                android:text="@string/Węch"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/t2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:onClick="changeProgress3"
                android:paddingLeft="24dp"
                android:text="@string/Wzrok"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/t3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:onClick="changeProgress3"
                android:paddingLeft="24dp"
                android:text="@string/Uśmiech"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/t4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:onClick="changeProgress3"
                android:paddingLeft="24dp"
                android:text="@string/Słuch"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:paddingLeft="16sp"
                android:text="@string/Question4"
                android:textColor="@android:color/black" />

            <ImageView
                android:id="@+id/wzor"
                android:layout_width="250dp"
                android:layout_height="350dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/wzor" />

            <RadioGroup
                android:id="@+id/radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/view_below"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/AnswerFourOne_RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:onClick="changeProgress4"
                    android:text="A" />

                <RadioButton
                    android:id="@+id/AnswerFourTwo_RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:onClick="changeProgress4"
                    android:text="B" />
            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:paddingLeft="16dp"
                android:text="@string/Question5"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/AnswerFiveOne"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:gravity="center"
                android:hint="Number"
                android:imeOptions="actionDone"
                android:inputType="number" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:paddingLeft="16dp"
                android:text="@string/Question6"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:paddingLeft="24dp"
                android:text="2 + 3 = 10"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:paddingLeft="24dp"
                android:text="7 + 2 = 63"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:paddingLeft="24dp"
                android:text="6 + 5 = 66"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:paddingLeft="24dp"
                android:text="8 + 4 = ??"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/AnswerSixOne"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:gravity="center"
                android:hint="Number"
                android:imeOptions="actionDone"
                android:inputType="number" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:paddingLeft="16sp"
                android:text="@string/Question7"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:paddingLeft="24dp"
                android:text="1 + 1 + 1 + 1 + 1"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:paddingLeft="24dp"
                android:text="1 + 1 + 1 + 1 + 1"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:paddingLeft="24dp"
                android:text="1 + 1 * 0 + 1 = ?"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/AnswerSevenOne"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:gravity="center"
                android:hint="Number"
                android:imeOptions="actionDone"
                android:inputType="number" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/SubmitButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_weight="1"
                    android:onClick="Submit"
                    android:text="@string/ZATWIERDŹ" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_weight="1"
                    android:onClick="Reset"
                    android:text="@string/WYZERUJ" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>