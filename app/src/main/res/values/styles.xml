<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">#FFC107</item>
        <item name="colorButtonNormal">#FFC107</item>
    </style>
    <style name="CustomTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:paddingLeft">@dimen/text_left_padding</item>
        <item name="android:layout_marginTop">@dimen/text_margin_top</item>
    </style>
    <style name="CustomSubTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:paddingLeft">@dimen/sub_text_padding_left</item>
        <item name="android:layout_marginLeft">@dimen/sub_text_margin_left</item>
        <item name="android:layout_marginTop">@dimen/sub_text_margin_top</item>
    </style>
    <style name="CustomEditTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:hint">Number</item>
        <item name="android:inputType">number</item>
        <item name="android:imeOptions">actionDone</item>
    </style>
    <style name="CustomCheckBoxTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:paddingLeft">@dimen/sub_text_padding_left</item>
        <item name="android:layout_marginLeft">@dimen/sub_text_margin_left</item>
        <item name="android:layout_marginTop">@dimen/sub_text_margin_top</item>
    </style>
</resources>
